					field="configurationReference"
					selectableTypes="FilterCircuit,Cache,DistributedCache,KPSReadWriteStore,KPSDatabaseReadStore,KPSCertStore,AuthzCodePersist,AccessTokenPersist,DbConnection"
					searches="ROOT_CIRCUIT_CONTAINER,CircuitContainer,CacheManager,KPSRoot,KPSPackage,KPSStoreGroup,OAuth2StoresGroup,AuthzCodeStoreGroup,AccessTokenStoreGroup,DbConnectionGroup"
					label="RESOURCE_REFERENCELABEL"
					title="RESOURCE_REFERENCETITLE" />
